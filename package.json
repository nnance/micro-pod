{
  "name": "micro-pod",
  "version": "0.0.1",
  "description": "Pod deployment module for the micro framework",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf coverage/ dist/ node_modules/",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "tslint src/**/*",
    "pretest": "npm run build",
    "test": "npm run test:only --",
    "test:watch": "npm test -- -w",
    "test:only": "lab  -c -S ./dist/test",
    "coverage": "lab -c -S -r console -o stdout -r html -o ./coverage/coverage.html ./dist/test"
  },
  "keywords": [
    "micro"
  ],
  "author": "Nick Nance",
  "license": "ISC",
  "devDependencies": {
    "@types/code": "^4.0.1",
    "@types/get-port": "0.0.4",
    "@types/lab": "^11.1.0",
    "@types/node": "^7.0.0",
    "@types/rimraf": "0.0.28",
    "code": "^4.0.0",
    "lab": "^11.2.2",
    "rimraf": "^2.5.4",
    "tslint": "^4.3.1",
    "typescript": "^2.1.5"
  },
  "dependencies": {
    "get-port": "^2.1.0"
  }
}
